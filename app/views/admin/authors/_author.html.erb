<tr>
  <td><%= author_counter + 1 %></td>
  <td><%= author.name %></td>
  <td><%= author.created_at.strftime Settings.format_time %></td>
  <td>
    <%= link_to t("view"), admin_author_path(author.id),
      class: "btn btn-sm grey-salsa btn-outline" %>
  </td>
  <td align="center">
    <%= link_to t("edit"), edit_admin_author_path(author),
      class: "btn btn-sm grey-salsa btn-outline" %>
  </td>
  <td align="center">
    <%= link_to t("destroy"), admin_author_path(author.id),
      method: :delete, data: {confirm: t("sure")},
      class: "btn btn-sm grey-salsa btn-outline" %>
  </td>
</tr>
