<%= form_for [:admin, @author] do |f| %>
  <div class="form-group">
    <%= f.label :name %><span class="required" aria-required="true"> * </span>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t("save"), class: "btn btn-primary" %>
  </div>
<% end %>
